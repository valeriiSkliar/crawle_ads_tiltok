{
    "extends": "@apify/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"outDir": "dist",
		"noUnusedLocals": false,
		"lib": ["DOM", "ES2022"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@lib/*": ["lib/*"],
			"@src/*": ["src/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist"]
}
